# EditorConfig ayuda a mantener estilos de codificaci√≥n consistentes entre distintos editores y IDEs
root = true

# Archivos por defecto
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Archivos JSON
[*.json]
indent_style = space
indent_size = 2

# Archivos Markdown (no cortar espacios al final)
[*.md]
trim_trailing_whitespace = false

# Archivos YAML
[*.yml]
indent_style = space
indent_size = 2

# Archivos JavaScript / JSX / TS / TSX
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
